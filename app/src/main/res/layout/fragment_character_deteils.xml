<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swiperefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presenter.ui.characters.details.CharacterDetailsFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/nameChDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/my_margin"
            android:layout_marginTop="@dimen/my_margin"
            app:layout_constraintEnd_toStartOf="@+id/statusChDetails"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/statusChDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/my_margin"
            android:layout_marginEnd="@dimen/my_margin"
            app:layout_constraintBottom_toBottomOf="@+id/nameChDetails"
            app:layout_constraintEnd_toStartOf="@+id/speciesChDetails"
            app:layout_constraintStart_toEndOf="@+id/nameChDetails"
            app:layout_constraintTop_toTopOf="@+id/nameChDetails" />

        <TextView
            android:id="@+id/speciesChDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/statusChDetails"
            app:layout_constraintEnd_toStartOf="@+id/imageChDeteils"
            app:layout_constraintStart_toEndOf="@+id/statusChDetails"
            app:layout_constraintTop_toTopOf="@+id/statusChDetails" />

        <TextView
            android:id="@+id/typeChDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/my_margin"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toStartOf="@+id/genderChDetails"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nameChDetails" />

        <TextView
            android:id="@+id/genderChDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/typeChDetails"
            app:layout_constraintEnd_toStartOf="@+id/originChDetails6"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/typeChDetails"
            app:layout_constraintTop_toTopOf="@+id/typeChDetails" />

        <TextView
            android:id="@+id/originChDetails6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/genderChDetails"
            app:layout_constraintEnd_toStartOf="@+id/imageChDeteils"
            app:layout_constraintStart_toEndOf="@+id/genderChDetails"
            app:layout_constraintTop_toTopOf="@+id/genderChDetails" />

        <TextView
            android:id="@+id/locationChDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="@+id/genderChDetails"
            app:layout_constraintStart_toStartOf="@+id/genderChDetails"
            app:layout_constraintTop_toBottomOf="@+id/genderChDetails" />

        <ImageView
            android:id="@+id/imageChDeteils"
            android:layout_width="@dimen/pic_size"
            android:layout_height="@dimen/pic_size"
            android:layout_marginTop="@dimen/my_margin"
            android:layout_marginEnd="@dimen/my_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerChDeteils"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageChDeteils" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>