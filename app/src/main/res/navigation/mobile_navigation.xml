<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/character_fragment">

    <fragment
        android:id="@+id/character_fragment"
        android:name="com.example.andersenrickandmortyfinal.presenter.ui.characters.CharactersFragment"
        android:label="@string/characters"
        tools:layout="@layout/fragment_characters">
        <action
            android:id="@+id/action_navigation_home_to_characterDetailsFragment"
            app:destination="@id/characterDetailsFragment"
                    app:popUpTo="@id/character_fragment"
                    app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/locaton_fragment"
        android:name="com.example.andersenrickandmortyfinal.presenter.ui.locations.LocationsFragment"
        android:label="@string/locations"
        tools:layout="@layout/fragment_locations">
        <action
            android:id="@+id/action_locaton_fragment_to_locationDetailsFragment"
            app:destination="@id/locationDetailsFragment"
                    app:popUpTo="@id/locaton_fragment"
                    app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/episode_fragment"
        android:name="com.example.andersenrickandmortyfinal.presenter.ui.episodes.EpisodesFragment"
        android:label="@string/episodes"
        tools:layout="@layout/fragment_episodes">

        <action
            android:id="@+id/action_episode_fragment_to_episodeDetailsFragment"
            app:destination="@id/episodeDetailsFragment"/>
            app:popUpTo="@id/episode_fragment"
            app:popUpToInclusive="true"/>


    </fragment>
    <fragment
        android:id="@+id/characterDetailsFragment"
        android:name="com.example.andersenrickandmortyfinal.presenter.ui.characters.details.CharacterDetailsFragment"
        android:label="fragment_character_deteils"
        tools:layout="@layout/fragment_character_deteils">
        <action
            android:id="@+id/action_characterDetailsFragment_to_navigation_home"
            app:destination="@id/character_fragment" />

        <action
            android:id="@+id/action_characterDetailsFragment_to_episodeDetailsFragment"
            app:destination="@id/episodeDetailsFragment" />
        <argument
            android:name="character"
            app:argType="com.example.andersenrickandmortyfinal.data.model.character.Character" />
        <action
            android:id="@+id/action_characterDetailsFragment_to_locationDetailsFragment"
            app:destination="@id/locationDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/episodeDetailsFragment"
        android:name="com.example.andersenrickandmortyfinal.presenter.ui.episodes.details.EpisodeDetailsFragment"
        android:label="fragment_episode_details"
        tools:layout="@layout/fragment_episode_details">
        <action
            android:id="@+id/action_episodeDetailsFragment_to_episode_fragment"
            app:destination="@id/episode_fragment" />
        <argument
            android:name="episode"
            app:argType="com.example.andersenrickandmortyfinal.data.model.episode.Episode" />
        <action
            android:id="@+id/action_episodeDetailsFragment_to_characterDetailsFragment"
            app:destination="@id/characterDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/locationDetailsFragment"
        android:name="com.example.andersenrickandmortyfinal.presenter.ui.locations.details.LocationDetailsFragment"
        android:label="fragment_location_details"
        tools:layout="@layout/fragment_location_details">
        <argument
            android:name="location"
            app:argType="com.example.andersenrickandmortyfinal.data.model.location.LocationRick" />
        <action
            android:id="@+id/action_locationDetailsFragment_to_locaton_fragment"
            app:destination="@id/locaton_fragment" />
        <action
            android:id="@+id/action_locationDetailsFragment_to_characterDetailsFragment"
            app:destination="@id/characterDetailsFragment" />
    </fragment>
</navigation>